import random

x = "+-/*!&$#?=@abcdefghijklnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"

pregunta = input('Hola que tal, ¿Te gustaria que el dia de hoy te crearamos tu contraseña?')


if pregunta  == 'si':
    y = int(input('De que longitud te gustaria que fuera tu contraseñ'))
    password = ""
    for i in range(y):
        password += random.choice(x)
    print('esta es tu nueva contraseña', password)
elif pregunta == 'no':
    z = input('¿Quieres decirme cual quieres que sea?')
    if z == 'si':
        cl = (input('Digitala'))
        print('Tu contraseña es', cl)
    elif z == 'no':
        print('okey')

print('gracias por tu atencion')
